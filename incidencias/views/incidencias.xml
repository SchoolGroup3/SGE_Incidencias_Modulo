<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <!--Vista Lista/Tree-->
    <record model="ir.ui.view" id="incidencias_list">
      <field name="name">incidencias list</field>
      <field name="model">incidencias.incidencia</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="descripcion"/>
          <field name="fecha_creacion"/>
          <field name="estado_actual"/>
        </tree>
      </field>
    </record>

    <!--Vista Formulario-->
    <record model="ir.ui.view" id="incidencias_form">
      <field name="name">incidencias form</field>
      <field name="model">incidencias.incidencia</field>
      <field name="arch" type="xml">
        <form>
         <sheet>
            <field name="name" placeholder="Titulo del incidencia" style="font-size: min(4vw, 2.6rem);" onchange="1"/>
            <field name="descripcion" placeholder="Descripcion del incidencia" style="font-size: min(2vw, 1.3rem);" onchange="1"/>
            <group>
              <group>
                <field name="estado_actual"/>
              </group>
              <group>
                <field name="fecha_creacion" widget="date"/>
              </group>
            </group>
            <group>
              <group>
                <field name="id_departamento"/>
              </group>
              <group>
                <field name="id_empleado_origen"/>
              </group>
            </group>
            <notebook>
              <page string="Comentarios">
                <field name="ids_comentarios" widget="one2many_list" readonly="1">
                  <tree>
                    <field name="fecha"/>
                    <field name="contenido"/>
                  </tree>
                </field>
              </page>
            </notebook>
         </sheet>
        </form>
      </field>
    </record>

    <!--Vista Kanban-->
    <record model="ir.ui.view" id="incidencias_kanban">
      <field name="name">incidencias kanban</field>
      <field name="model">incidencias.incidencia</field>
      <field name="arch" type="xml">
        <kanban>
          <templates>
            <t t-name="kanban-box">
              <div class="oe_kanban_global_click">
                <div class="o_kanban_record_body">
                  <div class="d-flex">
                      <div class="me-3">
                        <i class="fa fa-exclamation fa-5x"/>
                      </div>
                      <div>
                        <strong><field name="name"/></strong>
                        <div><field name="estado_actual"/></div>
                        <div><field name="fecha_creacion" widget="date"/></div>
                      </div>
                    </div>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    <!--Vista Search-->
    <record model="ir.ui.view" id="incidencias_search">
      <field name="name">incidencias search</field>
      <field name="model">incidencias.incidencia</field>
      <field name="arch" type="xml">
        <search>
          <field name="name"/>
          <field name="estado_actual"/>
          <field name="descripcion"/>
        </search>
      </field>
    </record>
  </data>
</odoo>