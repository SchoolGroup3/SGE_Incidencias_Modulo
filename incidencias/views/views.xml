<odoo>
    <data>
        <record model="ir.ui.view" id="incidencias.list">
            <field name="name">incidencias.list</field>
            <field name="model">incidencias.incidencias</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="fecha"/>
                    <field name="total_incidencias" class="fas fa-users"/>
                    <field name="incidencias_finalizadas"/>
                    <field name="tiempo_promedio_resolucion"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="estadisticas.form">
            <field name="name">estadisticas.form</field>
            <field name="model">incidencias.estadisticas</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="fecha"/>
                            <field name="total_incidencias"/>
                            <field name="incidencias_finalizadas"/>
                            <field name="tiempo_promedio_resolucion"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="estadisticas.list">
            <field name="name">estadisticas.list</field>
            <field name="model">incidencias.estadisticas</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="fecha"/>
                    <field name="total_incidencias"/>
                    <field name="incidencias_finalizadas"/>
                    <field name="tiempo_promedio_resolucion"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="estadisticas.search">
            <field name="name">estadisticas.search</field>
            <field name="model">incidencias.estadisticas</field>
            <field name="arch" type="xml">
                <search>
                    <field name="fecha"/>
                    <field name="total_incidencias"/>
                    <field name="incidencias_finalizadas"/>
                    <field name="tiempo_promedio_resolucion"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="estadisticas.kanban">
            <field name="name">estadisticas.kanban</field>
            <field name="model">incidencias.estadisticas</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_body">
                                    <strong>
                                        <field name="fecha"/>
                                    </strong>
                                    <div>
                                        <field name="total_incidencias"/>
                                    </div>
                                    <div>
                                        <field name="incidencias_finalizadas"/>
                                    </div>
                                    <div>
                                        <field name="tiempo_promedio_resolucion"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="incidencias.action_window">
            <field name="name">incidencias.window</field>
            <field name="res_model">incidencias.incidencias</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- server action to the one above -->
        <record model="ir.actions.server" id="incidencias.action_server">
            <field name="name">incidencias.server</field>
            <field name="model_id" ref="model_incidencias_incidencias"/>
            <field name="state">code</field>
            <field name="code">
                action = {
                "type": "ir.actions.act_window",
                "view_mode": "tree,form",
                "res_model": model._name,
                }
            </field>
        </record>

        <!-- Top menu item -->
        <menuitem name="incidencias" id="incidencias.menu_root"/>

        <!-- menu categories -->
        <menuitem name="Menu 1" id="incidencias.menu_1" parent="incidencias.menu_root"/>
        <menuitem name="Menu 2" id="incidencias.menu_2" parent="incidencias.menu_root"/>

        <!-- actions -->
        <menuitem name="List" id="incidencias.menu_1_list" parent="incidencias.menu_1"
              action="incidencias.action_window"/>
        <menuitem name="Server to list" id="incidencias" parent="incidencias.menu_2"
              action="incidencias.action_server"/>
    </data>
</odoo>