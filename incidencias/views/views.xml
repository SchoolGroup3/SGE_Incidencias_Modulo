<odoo>
    <data>
        <record id="estadisticas_form" model="ir.ui.view">
            <field name="name">estadisticas.form</field>
            <field name="model">incidencias.estadisticas</field>
            <field name="arch" type="xml">
                <form string="Estadísticas">
                    <sheet>
                        <group>
                            <field name="fecha"/>
                            <field name="total_incidencias"/>
                            <field name="incidencias_finalizadas"/>
                            <field name="tiempo_promedio_resolucion"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="estadisticas_list" model="ir.ui.view">
            <field name="name">estadisticas.list</field>
            <field name="model">incidencias.estadisticas</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="fecha"/>
                    <field name="total_incidencias"/>
                    <field name="incidencias_finalizadas"/>
                    <field name="tiempo_promedio_resolucion"/>
                </tree>
            </field>
        </record>

        <record id="estadisticas_search" model="ir.ui.view">
            <field name="name">estadisticas.search</field>
            <field name="model">incidencias.estadisticas</field>
            <field name="arch" type="xml">
                <search>
                    <field name="fecha"/>
                    <field name="total_incidencias"/>
                    <field name="incidencias_finalizadas"/>
                    <field name="tiempo_promedio_resolucion"/>
                </search>
            </field>
        </record>

        <record id="estadisticas_kanban" model="ir.ui.view">
            <field name="name">estadisticas.kanban</field>
            <field name="model">incidencias.estadisticas</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_body">
                                    <strong>
                                        <field name="fecha"/>
                                    </strong>
                                    <div>
                                        <field name="total_incidencias"/>
                                    </div>
                                    <div>
                                        <field name="incidencias_finalizadas"/>
                                    </div>
                                    <div>
                                        <field name="tiempo_promedio_resolucion"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</odoo>