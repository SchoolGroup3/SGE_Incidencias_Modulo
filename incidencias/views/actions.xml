<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="action_incidencias" model="ir.actions.act_window">
        <field name="name">Incidencias</field>
        <field name="res_model">incidencias.incidencia</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <record id="action_estadisticas" model="ir.actions.act_window">
        <field name="name">Estadisticas</field>
        <field name="res_model">incidencias.estadisticas</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <record id="action_encuestas" model="ir.actions.act_window">
        <field name="name">Encuesta</field>
        <field name="res_model">incidencias.encuesta</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <record id="action_comentarios" model="ir.actions.act_window">
        <field name="name">Comentarios</field>
        <field name="res_model">incidencias.comentario</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <record id="action_adjuntos" model="ir.actions.act_window">
        <field name="name">Adjunto</field>
        <field name="res_model">incidencias.adjunto</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <record id="action_employees" model="ir.actions.act_window">
        <field name="name">Employee</field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <record id="inherit_incidencias" model="ir.ui.view">
        <field name="name">Incidencias</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Incidencias">
                    <field name="incidencias_id" widget="one2many_list" readonly="1">
                        <tree>
                            <field name="name" width="80" string="Titulo"/>
                            <field name="descripcion" width="80" string="Descripcion"/>
                            <field name="fecha_creacion" width="80" string="Fecha"/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>

    <record id="inherit_encuesta" model="ir.ui.view">
        <field name="name">Encuestas</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Encuestas">
                    <field name="encuesta_id" widget="one2many_list" readonly="1">
                        <tree>

                            <field name="comentario" width="80" string="Comentario"/>
                            <field name="puntuacion" width="80" string="Puntuacion"/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>
        <!-- Vista Heredada de Projectos-->
    <record id="inherit_incidencias" model="ir.ui.view">
        <field name="name">Ajunto</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Adjunto">
                    <field name="adjunto_id" widget="one2many_list" readonly="1">
                        <tree>
                            <field name="nombre_archivo" string="Archivo" width="80"/>
                            <field name="ruta_archivo" string="Ruta" width="80"/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>

          <record model="ir.ui.view" id="inherit.estadisticas">
          <field name="name">Empleado</field>
          <field name="model">hr.employee</field>
          <field type="inherit_id" ref="hr.view_employee_form"/>
          <field name="arch" type="xml">
              <notebook position="inside">
                  <page string="Employees">
                      <field name="estadistica_id" widget="many2one_list" readonly="1">
                          <tree>
                              <field name="nombre" width="50"/>
                          </tree>
                      </field>
                  </page>
              </notebook>
          </field>
      </record>
</odoo>